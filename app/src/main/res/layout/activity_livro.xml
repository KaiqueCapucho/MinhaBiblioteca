<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/livroAtv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBackground">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:background="@color/toolbarBackground"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/imgBtnEditar"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <EditText
            android:id="@+id/edtTxtTitulo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/backgroundColor"
            android:enabled="false"
            android:gravity="center"
            android:hint="@string/titulo_original"
            android:inputType="textMultiLine"
            android:textColor="@color/textColor"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <EditText
            android:id="@+id/edtTxtPtBr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:background="@color/backgroundColor"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:hint="@string/titulo_ptbr"
            android:paddingVertical="6dp"
            android:inputType="textMultiLine"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtTitulo" />

        <TextView
            android:id="@+id/edtTxtAutor"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/backgroundColor"
            android:enabled="false"
            android:hint="@string/autores"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:padding="6dp"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtCategorias"
            app:layout_constraintEnd_toStartOf="@+id/imgCapa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtPtBr"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/edtTxtCategorias"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:padding="6dp"
            android:hint="@string/categorias"
            android:textColor="@color/textColor"
            android:enabled="false"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtTemas"
            app:layout_constraintEnd_toStartOf="@+id/imgCapa"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCapa" />

        <TextView
            android:id="@+id/edtTxtTemas"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            android:ems="10"
            android:enabled="false"
            android:hint="@string/temas"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:padding="6dp"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtDescricao"
            app:layout_constraintEnd_toStartOf="@+id/imgCapa"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtTxtCategorias" />


        <EditText
            android:id="@+id/edtTxtAnoPub"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            android:ems="4"
            android:enabled="false"
            android:hint="@string/ano"
            android:inputType="text"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:padding="6dp"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtCategorias"
            app:layout_constraintEnd_toStartOf="@+id/imgCapa"
            app:layout_constraintStart_toEndOf="@id/edtTxtEditora"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtAutor"
            app:layout_constraintVertical_bias="0.413" />

        <EditText
            android:id="@+id/edtTxtEditora"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            android:enabled="false"
            android:hint="@string/editora"
            android:inputType="text"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:padding="6dp"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtCategorias"
            app:layout_constraintEnd_toStartOf="@+id/edtTxtAnoPub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtAutor"
            app:layout_constraintVertical_bias="0.413" />

        <EditText
            android:id="@+id/edtTxtIdioma"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            android:enabled="false"
            android:hint="@string/idioma"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:padding="6dp"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtDescricao"
            app:layout_constraintEnd_toEndOf="@+id/imgCapa"
            app:layout_constraintStart_toStartOf="@+id/imgCapa"
            app:layout_constraintTop_toBottomOf="@+id/chkObtido" />

        <EditText
            android:id="@+id/edtTxtDescricao"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="48dp"
            android:background="@color/backgroundColor"
            android:enabled="false"
            android:hint="@string/descricao"
            android:gravity="start"
            android:textSize="18sp"
            android:padding="6dp"
            android:inputType="textMultiLine"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imgCapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/capa_do_livro"
            app:layout_constraintBottom_toTopOf="@+id/edtTxtDescricao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.937"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtPtBr"
            app:layout_constraintVertical_bias="0.195"
            app:srcCompat="@mipmap/marisa_foreground" />

        <CheckBox
            android:id="@+id/chkObtido"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@color/backgroundColor"
            android:enabled="false"
            android:textColorLink="@color/pink"
            android:text="@string/chkObtido"
            app:layout_constraintEnd_toEndOf="@+id/imgCapa"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="@+id/imgCapa"
            app:layout_constraintTop_toBottomOf="@+id/imgCapa" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:visibility="gone"
            android:background="@color/toolbarBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSalvar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtDescricao" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salvar"
            android:visibility="gone"
            android:background="@color/toolbarBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnCancelar"
            app:layout_constraintTop_toBottomOf="@+id/edtTxtDescricao" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menuLat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF2AD"
        android:layout_marginTop="56dp"
        app:menu="@menu/lateral_menu">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="@string/patchy"
                android:src="@mipmap/patchouli_foreground"
                android:layout_gravity="bottom|center_horizontal" />

        </FrameLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
